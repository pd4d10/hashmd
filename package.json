{
  "name": "bytemd",
  "private": true,
  "scripts": {
    "clean": "rm -rf packages/*/{lib,dist,tsconfig.tsbuildinfo}",
    "build": "tsc --build && node -r esm scripts/process.js && rollup -c",
    "build:ci": "UMD=1 npm run build",
    "dev": "run-p dev:bundle dev:tsc dev:process",
    "dev:bundle": "rollup -cw",
    "dev:tsc": "tsc --build --watch",
    "dev:process": "node -r esm scripts/process.js --watch",
    "test": "BABEL_ENV=test jest",
    "test:watch": "BABEL_ENV=test npm run test -- --watch",
    "postinstall": "node -r esm scripts/postinstall.js",
    "pub": "npm run clean && npm run build:ci && lerna publish --yes",
    "lint": "npx prettier --plugin-search-dir=. --list-different **/*.{ts,tsx,js,svelte}",
    "lint:fix": "npx prettier --plugin-search-dir=. --write **/*.{ts,tsx,js,svelte}"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@icon-park/svg": "^1.3.3",
    "@primer/css": "^15.2.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/jest": "^26.0.23",
    "chokidar": "^3.5.2",
    "esm": "^3.2.25",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "rollup": "^2.52.7",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.1",
    "rollup-plugin-vue": "^5.1.9",
    "svelte": "^3.38.3",
    "svelte-jester": "^1.7.0",
    "svelte-preprocess": "^4.7.3",
    "svgo": "^2.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5",
    "vue-template-compiler": "^2.6.14"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "packages/*/dist/index.min.js"
      }
    ],
    "ci": {
      "repoBranchBase": "main",
      "trackBranches": [
        "main"
      ]
    }
  }
}

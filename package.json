{
  "name": "bytemd",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf packages/*/{lib,dist,tsconfig.tsbuildinfo}",
    "build": "tsc --build && node -r esm scripts/process.js && rollup -c",
    "dev": "run-p dev:bundle dev:tsc dev:process",
    "dev:bundle": "rollup -cw",
    "dev:tsc": "tsc --build --watch",
    "dev:process": "node -r esm scripts/process.js --watch",
    "test": "BABEL_ENV=test jest",
    "test:watch": "BABEL_ENV=test npm run test -- --watch",
    "postinstall": "node -r esm scripts/generate.js",
    "pub": "UMD=1 npm run clean && npm run build && npm test && lerna publish --registry=https://registry.npmjs.org"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@icon-park/svg": "^1.2.1",
    "@primer/css": "^15.2.0",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/svelte": "^3.0.0",
    "@types/jest": "^26.0.15",
    "esm": "^3.2.25",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "mustache": "^4.0.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.32.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^4.1.2",
    "rollup-plugin-vue": "^5.1.9",
    "svelte": "^3.32.3",
    "svelte-jester": "^1.1.5",
    "svelte-preprocess": "^4.5.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5",
    "vue-template-compiler": "^2.6.12"
  },
  "resolutions": {
    "prettier": "^2.0.0"
  }
}

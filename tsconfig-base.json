{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "exclude": ["**/__tests__"]
}
